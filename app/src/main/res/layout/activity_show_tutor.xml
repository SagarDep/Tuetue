<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_start_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.twpooi.tuetue.StartActivity"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/li_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">


                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세보기"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>



        </android.support.v7.widget.Toolbar>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fm_progress"
        android:layout_below="@id/li_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimary"
            >

            <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                xmlns:prg="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progress"
                android:layout_height="30dp"
                android:layout_width="320dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                prg:rcBackgroundPadding="5dp"
                prg:rcProgressColor="@color/green"
                prg:rcBackgroundColor="@color/dark_gray"
                prg:rcTextProgressColor="@color/white"
                prg:rcTextProgressSize="14sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_success"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            >

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마감"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tutor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            >

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마감 (튜터보기)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </RelativeLayout>

    </FrameLayout>



    <LinearLayout
        android:id="@+id/rl_profile"
        android:layout_below="@+id/fm_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rl_profile_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_profile_img"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="thisisemail@gmail.com"
                    android:textColor="@color/dark_gray"
                    />

            </LinearLayout>



        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#bebebe"
            />


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_profile"
        android:layout_above="@+id/rl_join"
        >

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/rv"
            >
        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red_btn_bg_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비용"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참가하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
