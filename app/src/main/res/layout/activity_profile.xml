<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="tk.twpooi.tuetue.StartActivity"
    >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/profile_background"
        >

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/profile_top_background"
            >

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/li_profile"
            android:layout_below="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rl_profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_profile_img"
                    android:padding="5dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_toLeftOf="@+id/rank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/rank"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:background="@color/red"
                            android:textColor="@color/white"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="thisisemail@gmail.com"
                        android:textColor="@color/dark_gray"
                        />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>



        <View
            android:id="@+id/profile_line"
            android:layout_below="@+id/li_profile"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#bebebe"
            />

        <TextView
            android:id="@+id/intro"
            android:layout_below="@+id/profile_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Intro"
            />

        <View
            android:id="@+id/intro_line"
            android:layout_below="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#bebebe"
            />

        <LinearLayout
            android:id="@+id/li_count"
            android:layout_below="@+id/intro_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눔한 재능"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tutor_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0개"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>


            <View
                android:layout_below="@+id/li_profile"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#bebebe"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눔 받은 재능"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tutee_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0개"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/count_line"
            android:layout_below="@+id/li_count"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#bebebe"
            />



        <RelativeLayout
            android:layout_below="@+id/count_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/heartBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:src="@android:color/darker_gray"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@color/red_btn_bg_color"
                app:allow_random_color="false"
                app:siShape="@raw/heart"
                />

            <TextView
                android:id="@+id/interest"
                android:layout_toRightOf="@+id/heartBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="12개"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
